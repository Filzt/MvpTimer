<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
    android:id="@+id/mvp_image"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/abelha_rainha"
    android:layout_margin="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/mvp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abelha Rainha"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/mvp_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="170dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/mvp_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
           android:layout_marginTop="4dp"
        android:text="mjolnir_04"
        android:textSize="15dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@id/mvp_name"
        app:layout_constraintTop_toBottomOf="@id/mvp_name" />
    <TextView
        android:id="@+id/mvp_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02:00"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/mvp_map"
        app:layout_constraintTop_toBottomOf="@id/mvp_map"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        />


</androidx.constraintlayout.widget.ConstraintLayout>